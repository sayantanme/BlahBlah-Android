<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sayantanchakraborty.blahblah.LoginAndSignUpActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:scaleType="fitXY"
        android:src="@drawable/images" />

    <!--<EditText-->
        <!--android:layout_width="220dp"-->
        <!--android:layout_height="30dp"-->
        <!--android:inputType="textEmailAddress"-->
        <!--android:ems="10"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:hint="Email"-->
        <!--android:background="@drawable/text_rounded"-->
        <!--android:id="@+id/signupEmail"-->
        <!--android:textAlignment="center"-->
        <!--android:layout_alignTop="@+id/editText" />-->

    <EditText
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:hint="Email"
        android:background="@drawable/text_rounded"
        android:id="@+id/editText"
        android:textAlignment="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:inputType="textPersonName"
        android:hint="Name"
        android:ems="10"
        android:background="@drawable/text_rounded"
        android:layout_below="@+id/signUpPass"
        android:layout_alignEnd="@+id/signUpPass"
        android:layout_marginTop="11dp"
        android:textAlignment="center"
        android:id="@+id/signUpName"
        android:layout_alignStart="@+id/editText" />

    <Button
        android:text="Sign Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signUp"

        android:background="@drawable/button_style"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/signUpName"
        android:layout_alignStart="@+id/signUpName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="11dp"
        android:hint="Password"
        android:id="@+id/signUpPass"
        android:background="@drawable/text_rounded"
        android:textAlignment="center"
        android:layout_below="@+id/editText"
        android:layout_alignEnd="@+id/editText"
        android:layout_alignStart="@+id/editText" />

</RelativeLayout>
